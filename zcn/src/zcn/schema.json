{
  "$schema": "http://json-schema.org/schema",
  "id": "HelloSchematics",
  "title": "Hello Options Schema",
  "type": "object",
  "description": "Say hello to someone",
  "properties": {
    "name": {
      "type": "string",
      "description": "Lütfen Modul  adını belirleyiniz...",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "default":"user-role",
      "x-prompt": "Lütfen Modul adını giriniz"
    },
    "findOne": {
      "type": "boolean",
      "default":false,
      "x-prompt": "Servis detay fonksiyonu oluşturulsun mu ?"
    },
    "fields": {
      "type": "array",
      "default":["aciklama","tip"],
      "x-prompt": "Ekrana eklenmesini istediğiniz alanları giriniz."
    }
  },
  "required": [
    "name"
  ]
}
